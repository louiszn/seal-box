{
	"name": "seal-box",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"start:api": "pnpm --filter @sealbox/api start",
		"start:web": "pnpm --filter @sealbox/web start",
		"dev:api": "pnpm --filter @sealbox/api dev",
		"dev:web": "pnpm --filter @sealbox/web dev",
		"build:packages": "pnpm -r --filter ./packages/** build",
		"build:api": "pnpm build:packages && pnpm --filter @sealbox/api build",
		"build:web": "pnpm build:packages && pnpm --filter @sealbox/web build",
		"build": "pnpm -r run build",
		"format": "prettier . -w",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "louiszn",
	"license": "MIT",
	"packageManager": "pnpm@10.13.1",
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"typescript-eslint": "^8.37.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
